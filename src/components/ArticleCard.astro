---
// ArticleCard.astro
import AudioPlayer from './AudioPlayer.astro';

interface Props {
  post: any; // Type from astro:content
}

const { post } = Astro.props;
---

<article class="article-card bg-white p-6 rounded-lg shadow-lg mb-6 border border-gray-200 hover:shadow-xl transition-shadow duration-300">
  <h3 class="text-2xl font-bold text-gray-800 mb-2">{post.data.title}</h3>
  <div class="meta text-sm text-gray-600 mb-4 flex flex-wrap items-center gap-2">
    <time datetime={post.data.date.toISOString()} class="bg-blue-100 text-blue-800 px-2 py-1 rounded">
      {post.data.date.toLocaleDateString('fr-FR', { year: 'numeric', month: 'long', day: 'numeric' })}
    </time>
    {post.data.author && (
      <span class="bg-green-100 text-green-800 px-2 py-1 rounded">Par {post.data.author}</span>
    )}
    {post.data.rating && (
      <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded flex items-center">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        {post.data.rating}/5
      </span>
    )}
  </div>
  {post.data.audio_file && (
    <AudioPlayer src={post.data.audio_file} title={`Ã‰couter ${post.data.title}`} />
  )}
  {post.body && (
    <div class="body text-gray-700 mt-4">
      <p class="leading-relaxed">{post.body.slice(0, 200)}...</p>
      <a href={`/blog/${post.slug}`} class="text-blue-600 hover:text-blue-800 font-medium mt-2 inline-block">Lire la suite</a>
    </div>
  )}
</article>
