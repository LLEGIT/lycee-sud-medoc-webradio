---
// Header.astro
---

<header class="bg-white shadow-lg">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
		<div class="flex items-center justify-between">
			<div class="flex items-center">
				<div class="flex-shrink-0">
					<img class="h-12 w-12" src="/favicon.png" alt="Logo" />
				</div>
				<div class="ml-4">
					<h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Lycée Sud Médoc</h1>
					<p class="text-sm text-gray-600">Webradio</p>
				</div>
			</div>
			<nav class="hidden md:block">
				<ul class="flex space-x-8">
					<li><a href="/" class="text-gray-900 hover:text-blue-600 font-medium">Accueil</a></li>
					<li><a href="/blog" class="text-gray-900 hover:text-blue-600 font-medium">Blog</a></li>
					<li><a href="/admin" class="text-gray-900 hover:text-blue-600 font-medium">Admin</a></li>
				</ul>
			</nav>
			<div class="md:hidden">
				<button class="text-gray-900 hover:text-blue-600 focus:outline-none focus:text-blue-600" aria-label="Menu">
					<svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
						<path fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2z"/>
					</svg>
				</button>
			</div>
		</div>
	</div>
</header>
